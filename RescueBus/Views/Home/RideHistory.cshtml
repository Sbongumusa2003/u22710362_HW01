@model IEnumerable<RescueBus.Models.BookingConfirmedViewModel>

@{
    ViewBag.Title = "RideHistory";
}

<div class="row row-cols-1 row-cols-md-1 g-4" style="width: 80%; margin: auto;">
    <div class="col text-center">
        
        <img src="~/Content/Images/time_logo.png" alt="image of time" width="100"/>
        <h2>RideHistory</h2>
    </div>



    <div class="col row">
        @foreach (var item in Model)
        {
            <a 
               href="@Url.Action("BookingConfirmed2", "Home", new { BookingID = item.Booking.BookingID }) " style="text-decoration: none; color: inherit; ">
                <div class="col card m-xl-2 my-4 p-xl-4 py-5" style="@(item.Booking.isSOS ? "border: 2px solid red; display: block; border-radius: 8px;" : "")">

                    <h2 style="@(item.Booking.isSOS ? "color:red;" : "")">@item.Booking.BookingDate</h2>
                    <div class="row">
                        <div class="col">
                            <p class="card-text"><strong>Booking ID:</strong> @item.Booking.BookingID</p>
                            <p class="card-text"><strong>Driver Name:</strong> @item.Driver.FirstName</p>
                            <p class="card-text"><strong>Ambulance Type:</strong> @item.Vehicle.Type</p>
                            <p class="card-text"><strong>Pick-Up Address:</strong> @item.Booking.PickupAddress</p>
                        </div>
                        <div class="col">

                        </div>
                    </div>

                </div>
            </a>
        }
    </div>

</div>

