@model RescueBus.Models.Vehicle

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm("Create", "Vehicle", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Vehicle</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <!-- Vehicle Type -->
        <div class="form-group">
            @Html.LabelFor(model => model.Type, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Type, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Type, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Registration Number -->
        <div class="form-group">
            @Html.LabelFor(model => model.RegistrationNumber, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.RegistrationNumber, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.RegistrationNumber, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- File Upload for Image -->
        <div class="form-group">
            <label class="control-label col-md-2" for="ImageFile">Upload Image</label>
            <div class="col-md-10">
                <input type="file" name="ImageFile" class="form-control" accept="image/*" />
                <span class="text-danger field-validation-valid" data-valmsg-for="ImageFile" data-valmsg-replace="true"></span>
            </div>
        </div>

        <!-- Service Selection -->
        <div class="form-group">
            <label for="ServiceID" class="control-label col-md-2">Select Service:</label>
            <div class="col-md-10">
                <select id="ServiceID" name="ServiceID" class="form-control">
                    @foreach (var service in ViewBag.Services)
                    {
                        <option value="@service.ServiceID">@service.Name</option>
                    }
                </select>
            </div>
        </div>

        <!-- Submit Button -->
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}


